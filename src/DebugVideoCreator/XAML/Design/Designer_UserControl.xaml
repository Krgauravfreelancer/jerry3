<UserControl x:Class="VideoCreator.XAML.Designer_UserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:designer="clr-namespace:DesignerNp.controls;assembly=designer" 
        xmlns:DesignViewer="clr-namespace:DesignViewerNp.controls;assembly=DesignViewer"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="#3381CC"  Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" />
        <Border BorderThickness="1" BorderBrush="#3381CC"  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" />
        <Border BorderThickness="1" BorderBrush="#3381CC"  Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" />
        <Border BorderThickness="1" BorderBrush="#3381CC"  Grid.Column="0" Grid.Row="1" />
        <Border BorderThickness="1" BorderBrush="#3381CC"  Grid.Column="1" Grid.Row="1" />
        <!--<Border BorderThickness="1" BorderBrush="#3381CC"  Grid.Column="2" Grid.Row="1" />-->
        <StackPanel Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="3" FlowDirection="LeftToRight" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="2" x:Name="BtnInitialiseDesigner" Content="Initialize" Click="BtnInitialiseDesigner_Click" Width="200" Height="25"></Button>
        </StackPanel>
        
        <designer:ShapeBar Grid.Column="0" Grid.Row="1" Margin="2" x:Name="shapeBar"  ></designer:ShapeBar>
        <StackPanel x:Name="stackDesigner"  Grid.Column="1" Grid.Row="1" Margin="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <designer:Designer x:Name="designer" />
        </StackPanel>
        <DesignViewer:DesignViewer Grid.Column="1" Grid.Row="1" Margin="2" x:Name="designViewer" Visibility="Visible"/>
        <designer:PropertyWindow Grid.Column="2" Grid.Row="1" VerticalAlignment="Top" Margin="2" x:Name="propertyWindow" MaxHeight="450"></designer:PropertyWindow>
        <StackPanel Grid.Row="2"  Grid.Column="0" Grid.ColumnSpan="3" FlowDirection="LeftToRight" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="2" x:Name="btnSave" Click="BtnProceed_Click" Width="200" Height="25">Proceed</Button>
        </StackPanel>

    </Grid>
</UserControl>
