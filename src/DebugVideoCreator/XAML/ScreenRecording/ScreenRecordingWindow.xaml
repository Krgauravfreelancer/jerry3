<UserControl x:Class="VideoCreator.XAML.ScreenRecordingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoCreator.XAML" 
        xmlns:screenrecorder_usercontrol="clr-namespace:ScreenRecorder_UserControl;assembly=ScreenRecorder_UserControl"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition MaxWidth="0"/>
        </Grid.ColumnDefinitions>
        <DockPanel Background="#FFE6E6E6" DockPanel.Dock="Top">
            <Border Background="DarkGray" Padding="20">
                <screenrecorder_usercontrol:ScreenRecorder_Control Name="Recorder" Background="White" Loaded="Recorder_Loaded" DockPanel.Dock="Top" Padding="20,5" MediaRecordingCompleted="ScreenRecorder_Control_SaveClicked2" CloseWindow="Recorder_CloseWindow" DeleteMedia="Recorder_DeleteMedia"/>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
