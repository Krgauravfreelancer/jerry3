<UserControl x:Class="FSP_UserControl.Controls.TimeLine_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FSP_UserControl.Controls"
             mc:Ignorable="d" 
             Height="30" d:DesignWidth="800" SizeChanged="UserControl_SizeChanged">
    <Canvas  >
        <StackPanel Name="MainStack">
            <StackPanel Name="MediaStack" Orientation="Horizontal" Height="30" Background="purple">
                <Label Content="Media1 - Video" Background="DodgerBlue" Width="100" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Foreground="White" Margin="1"/>
            </StackPanel>
        </StackPanel>
        <Border Name="Cursor" BorderThickness="2,0,0,0" Height="30" BorderBrush="White" HorizontalAlignment="Left">
            <TextBlock Name="ElapsedTxt" VerticalAlignment="Top" Text="00:00" Foreground="Purple"  Background="White" Padding="2,0"/>
        </Border>

    </Canvas>
</UserControl>
