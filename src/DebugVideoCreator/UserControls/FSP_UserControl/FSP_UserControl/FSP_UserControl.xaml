<UserControl x:Class="FSP_UserControl.FSPUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSP_UserControl" 
        xmlns:fullscreenplayer_usercontrol="clr-namespace:FullScreenPlayer_UserControl;assembly=FullScreenPlayer_UserControl" 
        xmlns:controls="clr-namespace:FSP_UserControl.Controls"
        mc:Ignorable="d" Background="#FF4A4A4A">
    <Border BorderBrush="Red">
        <DockPanel>
            <Border  DockPanel.Dock="Top" Background="#ececec" BorderBrush="#FFA0A0A0" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <Button Name="PlayBtn" Click="PlayBtn_Click" Width="120">Play</Button>
                    <TextBlock Name="PositionTxt" Text="--:--" DockPanel.Dock="Bottom" FontSize="20" HorizontalAlignment="Center" Margin="25, 0" Foreground="Black" FontWeight="Bold"/>

                </StackPanel>

            </Border>
            <controls:TimeLine_UserControl x:Name="Timeline" DockPanel.Dock="Bottom"/>
            <fullscreenplayer_usercontrol:FullScreenPlayer_Control x:Name="Player" Margin="10" Position_Changed="Player_Position_Changed"/>
        </DockPanel>
    </Border>
</UserControl>
