<UserControl x:Class="DesignerNp.controls.Designer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesignerNp.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             AllowDrop="True"
             Loaded="UserControl_Loaded">
    <Grid>
        <Canvas Margin="0" x:Name="container" Width="1920" MinHeight="1080"
            Background="Transparent"
            xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation'  
            xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'
            MouseLeftButtonDown="container_MouseLeftButtonDown"
            MouseLeftButtonUp="container_MouseLeftButtonUp"
            MouseMove="container_MouseMove"
            KeyUp="container_KeyUp"
            Focusable="True" IsVisibleChanged="container_IsVisibleChanged"
            >
        </Canvas>
    </Grid>
</UserControl>
