<UserControl x:Class="TestGridDisplay_UserControl.TestGridDisplayUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestGridDisplay_UserControl"
        mc:Ignorable="d">
    <Grid>
        <Label Visibility="Hidden" Content="Choose Table to display **" HorizontalAlignment="Left" Margin="10,20,0,0" />
        <ComboBox x:Name="cmbTable" Visibility="Hidden" SelectionChanged="CMBTable_SelectionChanged" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="200" Height="25" />
        <Label x:Name="lblheader" FontWeight="Bold" FontSize="16" Foreground="#0000FF"  Content="Video Event Data - Replaces soon" HorizontalAlignment="Center" Margin="0,5,0,0" />
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"  Margin="10,35,0,0">
            <Grid x:Name="dynamicGrid" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </ScrollViewer>

    </Grid>

</UserControl>
