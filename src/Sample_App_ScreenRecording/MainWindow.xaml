<Window x:Class="Sample_App_ScreenRecording.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sample_App_ScreenRecording"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid VerticalAlignment="Center">
        <StackPanel>
            <Button x:Name="btnRecord" Click="btnRecord_Click" Content="Record" Height="50" Width="200"/>
            <TextBlock Name="stopwatchText" Text="--:--" DockPanel.Dock="Bottom" FontSize="20" HorizontalAlignment="Center" Margin="25, 0" Foreground="Black" FontWeight="Bold"/>
            <Label x:Name="lblStatus" Content="Video Created at - " Margin="25, 0" />
            <TextBox x:Name="txtPath" Text=""  Margin="25, 0" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
