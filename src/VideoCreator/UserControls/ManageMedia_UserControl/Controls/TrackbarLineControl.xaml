<UserControl x:Class="ManageMedia_UserControl.Controls.TrackbarLineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManageMedia_UserControl.Controls"
             mc:Ignorable="d" >
    <Grid>
        <StackPanel Orientation="Vertical" Cursor="Hand">
            <Line x:Name="TrackbarLine" X1="3" d:Y1="50" X2="3" Y2="0" Stroke="Red" Margin="-2,0,0,0" StrokeThickness="2" Fill="Black"></Line>
            <Path Data="M 10,2 l 5.5,4 h 0 -5.5 Z"   Stroke="Red" StrokeThickness="2" Fill="Red" Height="9" Stretch="Fill"/>
            <Rectangle Fill="Red" Width="10" Height="8" Margin="0,0,0,0"> </Rectangle>
        </StackPanel>
    </Grid>
</UserControl>
