<UserControl x:Class="Timeline.UserControls.Controls.EventBlockTooltipControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Timeline.UserControls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="15"  d:DesignWidth="150" Height="15" Width="150">
    <Grid>
        <TextBlock Margin="0" Background="AliceBlue" Foreground="CornflowerBlue" VerticalAlignment="Stretch" HorizontalAlignment="Left"
                   d:Text="event name - 00:00:00.000" 
                    Text="{Binding EventBlockTooltipText}" ></TextBlock>
    </Grid>
</UserControl>
